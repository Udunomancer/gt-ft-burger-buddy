<h1>BURGERS</h1>
<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="card">
            <h4 class="card-title">Unconsumed Burgers</h4>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#unless consumed}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
            </div>
        </div>
        <div class="col-4">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-4">
            <h2>Consumed Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if consumed}}
                {{> burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>